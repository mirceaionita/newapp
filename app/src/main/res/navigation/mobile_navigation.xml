<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mionita.newsapp.ui.home.NewsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_news_list" />

    <fragment
        android:id="@+id/navigation_world"
        android:name="com.mionita.newsapp.ui.world.WorldNewsFragment"
        android:label="@string/title_world" />

    <fragment
        android:id="@+id/navigation_science"
        android:name="com.mionita.newsapp.ui.science.ScienceNewsFragment"
        android:label="@string/title_science" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.mionita.newsapp.ui.favorite.FavoriteNewsFragment"
        android:label="@string/title_favorite" />
</navigation>
